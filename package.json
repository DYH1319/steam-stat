{
  "name": "steam-stat",
  "type": "module",
  "version": "0.1.1",
  "packageManager": "pnpm@10.18.1",
  "description": "Steam Stat Windows Application",
  "author": "DYH1319",
  "main": "dist-electron/main.js",
  "engines": {
    "node": "^22.21.1"
  },
  "scripts": {
    "dev": "chcp 65001 && set DEBUG=steam-session:* && vite",
    "dev:no-autofill-warn": "chcp 65001 && set DEBUG=steam-session:* && vite 2>&1 | findstr /V /C:\"Autofill\"",
    "build": "vue-tsc -b && vite build",
    "build:test": "vue-tsc -b && vite build --mode test",
    "clean:release": "powershell -Command \"if (Test-Path release) { Remove-Item -Path release -Recurse -Force -ErrorAction SilentlyContinue }\"",
    "build:win": "pnpm run clean:release && pnpm build && electron-builder --win --config",
    "build:win:ci": "pnpm run clean:release && pnpm build && electron-builder --win --config --publish never",
    "build:win:verbose": "pnpm run clean:release && pnpm build && set DEBUG=electron-builder && electron-builder --win --config",
    "build:win:fast": "pnpm run clean:release && pnpm build && electron-builder --win --config -c.compression=store",
    "build:win:versioned": "node scripts/build-versioned.js",
    "serve": "http-server ./dist -o",
    "serve:test": "http-server ./dist-test -o",
    "svgo": "svgo -f src/assets/icons",
    "generate:icons": "tsx ./scripts/generate.icons.ts",
    "lint": "npm-run-all -s lint:tsc lint:eslint lint:stylelint",
    "lint:tsc": "vue-tsc -b",
    "lint:eslint": "eslint . --cache --fix",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss,vue}\" --cache --fix",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "taze": "taze minor -wIr",
    "commit": "git cz",
    "release": "bumpp",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "db:up": "drizzle-kit up"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.7",
    "electron-updater": "^6.6.2",
    "kvparser": "^1.0.2",
    "markdown-it-task-lists": "^2.1.1",
    "protobufjs": "^7.5.4",
    "steam-session": "^1.9.4",
    "steam-user": "^5.2.3",
    "winreg": "^1.2.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@clack/prompts": "^0.11.0",
    "@electron/rebuild": "^4.0.1",
    "@faker-js/faker": "^10.0.0",
    "@iconify/json": "^2.2.392",
    "@iconify/vue": "^5.0.0",
    "@node-steam/vdf": "^2.2.0",
    "@stylistic/stylelint-config": "^3.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/markdown-it": "^14.1.2",
    "@types/nprogress": "^0.2.3",
    "@types/path-browserify": "^1.0.3",
    "@types/qs": "^6.14.0",
    "@types/steam-user": "^5.1.0",
    "@types/winreg": "^1.2.36",
    "@unocss/eslint-plugin": "^66.5.2",
    "@unocss/preset-legacy-compat": "^66.5.2",
    "@vee-validate/zod": "^4.15.1",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/tsconfig": "^0.8.1",
    "@vueuse/components": "^13.9.0",
    "@vueuse/core": "^13.9.0",
    "@vueuse/integrations": "^13.9.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.2",
    "boxen": "^8.0.1",
    "bumpp": "^10.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cz-git": "^1.12.0",
    "dayjs": "^1.11.18",
    "defu": "^6.1.4",
    "disable-devtool": "^0.3.9",
    "drizzle-kit": "^0.31.7",
    "echarts": "^6.0.0",
    "electron": "32.0.0",
    "electron-builder": "^26.0.0",
    "element-plus": "^2.11.4",
    "eruda": "^3.4.3",
    "es-toolkit": "^1.39.10",
    "eslint": "^9.37.0",
    "filesize": "^11.0.13",
    "fs-extra": "^11.3.2",
    "hotkeys-js": "^3.13.15",
    "http-server": "^14.1.1",
    "lint-staged": "^16.2.3",
    "lucide-vue-next": "^0.545.0",
    "markdown-it": "^14.1.0",
    "mitt": "^3.0.1",
    "motion-v": "^1.7.4",
    "npm-run-all2": "^8.0.4",
    "nprogress": "^0.2.0",
    "path-browserify": "^1.0.1",
    "path-to-regexp": "^8.3.0",
    "picocolors": "^1.1.1",
    "pinia": "^3.0.3",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "qs": "^6.14.0",
    "reka-ui": "^2.5.1",
    "sass-embedded": "^1.93.2",
    "scule": "^1.3.0",
    "simple-git-hooks": "^2.13.1",
    "source-map-support": "^0.5.21",
    "stylelint": "^16.25.0",
    "stylelint-config-recess-order": "^7.3.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-scss": "^6.12.1",
    "svgo": "^4.0.0",
    "systeminformation": "^5.27.11",
    "tailwind-merge": "^3.3.1",
    "taze": "^19.7.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "ua-parser-js": "^2.0.5",
    "unocss": "^66.5.2",
    "unocss-preset-animations": "^1.2.1",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-turbo-console": "^2.2.0",
    "unplugin-vue-components": "^29.1.0",
    "vconsole": "^3.15.1",
    "vee-validate": "^4.15.1",
    "vite": "^7.1.9",
    "vite-plugin-app-loading": "^0.4.0",
    "vite-plugin-archiver": "^0.2.0",
    "vite-plugin-banner": "^0.8.1",
    "vite-plugin-compression2": "^2.2.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-env-parse": "^1.0.15",
    "vite-plugin-fake-server": "^2.2.0",
    "vite-plugin-pages": "^0.33.1",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vite-plugin-vue-meta-layouts": "^0.6.0",
    "vue": "^3.5.22",
    "vue-echarts": "^8.0.1",
    "vue-router": "^4.5.1",
    "vue-sonner": "^2.0.9",
    "vue-tsc": "^3.1.1",
    "zod": "^3.24.0"
  },
  "build": {
    "appId": "asia.dyh1319.steamstat",
    "productName": "Steam Stat",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "compression": "normal",
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "electronLanguages": [
      "zh-CN",
      "en-US"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Steam Stat",
      "differentialPackage": false,
      "license": "LICENSE",
      "displayLanguageSelector": false,
      "deleteAppDataOnUninstall": false,
      "selectPerMachineByDefault": true,
      "installerLanguages": [
        "zh_CN",
        "en_US"
      ],
      "language": "2052"
    },
    "files": [
      "dist",
      "dist-electron",
      "!**/*.map",
      "!**/test_extension.node",
      "!node_modules/**/build/**/*.{iobj,ipdb,obj,pdb,lib,exp,ilk,tlog,vcxproj,filters,user,log}",
      "!node_modules/**/build/**/sqlite3.{c,h}",
      "!node_modules/**/build/**/sqlite3ext.h",
      "!node_modules/**/build/**/*.cpp",
      "!node_modules/@rollup/**",
      "!node_modules/rollup/**",
      "!node_modules/@oxc-parser/**",
      "!node_modules/oxc-parser/**",
      "!node_modules/@parcel/watcher*/**",
      "!node_modules/drizzle-kit/**",
      "!node_modules/esbuild*/**",
      "!node_modules/vite*/**",
      "!node_modules/@vitejs/**"
    ],
    "extraResources": [
      {
        "from": "electron/csharp/SteamAppInfoAndPackageInfoParser",
        "to": "csharp/SteamAppInfoAndPackageInfoParser",
        "filter": [
          "**/*",
          "!appinfo_text.vdf",
          "!appinfo_ts.json"
        ]
      },
      {
        "from": "resources/icons8-steam-256.ico",
        "to": "icons8-steam-256.ico"
      },
      {
        "from": "drizzle",
        "to": "drizzle",
        "filter": [
          "**/*.sql",
          "**/*.json"
        ]
      }
    ],
    "win": {
      "artifactName": "Steam-Stat-Setup-${version}.exe",
      "icon": "resources/icons8-steam-256.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "DYH1319",
      "repo": "steam-stat"
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "better-sqlite3"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "preserveUnused": true
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
